ICON_CAPTION_BATCH_SIZE=128
PADDLE_MAX_BATCH_SIZE=1024
PADDLE_REC_BATCH_NUM=1024

#If you want harsher protection:
#Lower MEM_GUARD_SYS_AVAIL_MIN_MB (e.g., 1200) or MEM_GUARD_PROC_RSS_MAX_MB (e.g., 24000) to trigger earlier.

MEM_GUARD_ENABLED=false
MEM_GUARD_SYS_AVAIL_MIN_MB=800
MEM_GUARD_PROC_RSS_MAX_MB=30000

# Resource monitor enable/disable
# Set to false to disable the background resource monitor entirely
MONITOR_ENABLED=true

# Resource monitor verbosity toggles
# Set to false to hide GPU stats line entirely
MONITOR_SHOW_GPU=true
# Set to false to hide network counters (net_sent/net_recv)
MONITOR_SHOW_NET=true

